<div class="container mt-4">
  <h2 class="text-center">Order</h2>
  <ul class="list-unstyled">
    <% @order.each do |order|%>
      <div class="container border m-3">
        <div class="row mt-5">
          <div class="col-lg-12  cart">
            <div>
                <%= order.id %><br>
            </div>
            <div>
                <%= order.total %><br>
            </div>
            <div>
                <%= order.user.email %><br>
            </div>
          </div>
          <div class="mt-3 text-center">
           
          </div>
        </div>
      </div>

      <div class="mt-3 text-center">
        <% if order.state == 'completed' || order.state == 'cart' %>
          <div class="order-btn">
            <%= link_to  "Confirm", order_path(order, {:state=> 'confirmed'}) ,method: :patch, :class=>"btn btn-primary border-inner p-3 mb-2"%>
            <%= link_to  "Reject", order_path(order, {:state=> 'rejected'}) ,method: :patch ,:class=>"btn btn-primary border-inner p-3 mb-2"%>
          </div>
        <% else %>
          <div class="order-state">
            <%= order.state %>
          </div>
        <% end %>
      </div>
    <% end %>


         
  </ul>
</div>
