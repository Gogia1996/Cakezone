<style type="text/css">
  .cart li{
    margin: 20px;
  }
</style>
<div class="container mt-4">
  <h2 class="text-center">Cart show</h2>
  <ul class="list-unstyled">
    <% @line_items.each do |line_item|%>
      <div class="container border m-3">
        <div class="row mt-5">
          <div class="col-lg-12 d-flex cart">
            <li>
              <%= line_item.cake.name %>
            </li>
            <li>
              <%= image_tag line_item.cake.image , class:"img-fluid" %>
            </li>
            <%= form_for line_item  do |f| %>
              <%= f.number_field :quantity %>
              <%= f.number_field :total  ,class:'pe-none' %>
              <%= f.submit %>
           <% end %>
            
            <li class="total-price">
              <%= number_field_tag 'total-price', line_item.total,class:"quantity pe-none total_price"%>
              <div class= "total_price">
               <h1>
               </h1>
              </div>
            </li>
          </div>
          <div class="mt-3 text-center">
            <%= link_to  "Checkout", checkout_path,:class=>"btn btn-primary border-inner p-3 mb-2"%>
            <%= link_to  "Update", line_item_path(line_item),method: :put ,:class=>"btn btn-primary border-inner p-3 mb-2"%>
            <%= link_to  "Empty", order_path(line_item), method: :delete ,:class=>"btn btn-primary border-inner p-3 mb-2"%>
          </div>
        </div>
      </div>
    <% end %>


         
  </ul>
</div>
