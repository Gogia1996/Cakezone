
<div class="container">
  <h2 class="text-center">Cart show</h2>
  <ul class="list-unstyled">
    <% @line_item.each do |line_item|%>
      <div class="container border m-3">
        <div class="row">
          <div class="col-lg-6">
            <li>
              Name: <%= line_item.cake.name %>
            </li>
            <li>
              Image:<%= image_tag line_item.cake.image , class:"img-fluid" %>
            </li>
            <li>
              Price: <%= number_to_currency line_item.cake.price,  class:"cakeprice" %>
            </li> 
            <li>
              Quantity: <%= line_item.quantity %>
              <%= number_field_tag 'quantity', "1",class:"quantity", oninput:"calc(1)", min:"1", max:"1000"  %>
            </li> 
            <li>
              Total Price: <%= number_to_currency(line_item.total) %>
            </li>
            <li>
              Order: <%= line_item.order.total %>
            </li>

            
            <div class="mt-3 text-center">
              <%= link_to  "Checkout", checkout_path ,:class=>"btn btn-primary border-inner p-3 mb-2"%>
              <%= link_to  "Update", checkout_path ,:class=>"btn btn-primary border-inner p-3 mb-2"%>
              <%= link_to  "Delete", checkout_path ,:class=>"btn btn-primary border-inner p-3 mb-2"%>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </ul>
</div>
