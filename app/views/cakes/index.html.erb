<style>
  .image{
    height: 345px;
  }
  .border-1:hover{
    color: #eda555;
  }
</style>

<div class="container">
  <div class="row">
    <% @cake.each do |cake| %>
      <div class="col-lg-4 col-md-6 col-xs-12 p-3">
        <%= link_to (cake_path(cake.id)) do %>
          <div class="border border-1">
            <h2 class="text-center my-3 cake-name">
              <%= cake.name  %>
            </h2>
            <div class="ml-4">
              <%= image_tag cake.image , class:"rounded mx-auto d-block img-fluid image" %> 
            </div>
            <div class="d-flex justify-content-center">
              <p class="mb-0 category-title bg-primary p-3 bg-body rounded text-white w-100 text-center">  Price:$<%= cake.price %>
              </p>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
<div class="container text-center mt-5">
  <% if current_user.try(:admin?) %>
    <%= link_to "Create", new_cake_path,  class:"btn btn-primary border-inner py-3 px-5 text-white ml-5"%>
  <% end %>
</div>