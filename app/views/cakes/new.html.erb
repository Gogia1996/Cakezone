<div class="col-lg-12 pl-2">
        <%= form_for @cakes do |f| %>
          <div class="row">
            <div class="col-lg-6">
              <%= f.text_field :name ,placeholder:'Your Name', class:'form-control',:required => 'required'%>
            </div>
            <div class="col-lg-6 pl-1">
              <%= f.text_field :description ,placeholder:'Your E-mail' , class:'form-control', :required => 'required'%>
            </div>
          </div>
          <div class="row mt-3">
            <div class="col-lg-12">
              <%= f.text_field :price ,placeholder:'Subject', class:'w-100 form-control', :required => 'required'%>
            </div>
          </div>
          <div class="mt-3">
            <div class="col-lg-12 p-0">
              <<%= f.label :image, "Image", class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= f.file_field :image, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
            </div>
            </div>
          </div>
          <div class="mt-3 text-center">
            <%= f.submit  "Send message", :class=>"sendmessage"%>
          </div>
        <% end %>
      </div>