<style type="text/css">
  .create{
    margin-top: 32px;
  }
</style>

<div class="container mt-5">
  <div class="row">

  <div class="col-lg-12 pl-2">
    <%= form_for @cake do |f| %>
      <div class="row">
        <div class="col-lg-6">
          <%= f.text_field :name ,placeholder:'Name', class:'form-control',:required => 'required'%>
        </div>
        <div class="col-lg-6">
          <%= f.text_field :description ,placeholder:'Description' , class:'form-control', :required => 'required'%>
        </div>
      </div>
      <div class="row mt-5">
        <div class="col-lg-6">
          <%= f.text_field :price ,placeholder:'Price', class:'w-100 form-control', :required => 'required'%>
        </div>
        <div class="col-lg-6">
            
              
          <%= f.select :category, [["birthday", "birthday"], ["custom", "custom"], ["wedding", "wedding"]], {prompt: "Select"}, class: "w-100 form-control form-select", required: true %>
        </div>

      </div>
      <div class="row mt-5">
        <div class="col-lg-6">
          <%= f.label :image, "Image", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.file_field :image, class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm w-100" %>
          </div>
        </div>
        <div class="col-lg-6 text-center create">
        <%= f.submit  "Create", :class=>"btn btn-primary border-inner w-50"%>
      </div>
      </div>
      
    <% end %>
  </div>
  </div>
</div>