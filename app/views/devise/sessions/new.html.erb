<style type="text/css">
  p, .sign{
    font-size: 25px;
  }
</style>
<div class="container mt-5">
  <div class="row border">
    <h2 class="text-center mb-5 mt-3">Welcome!</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field form-group ms-5">
      <%= f.label :email,  class:"mb-2"%>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control w-50" %>
    </div>

    <div class="field mt-5 form-group ms-5">
      <%= f.label :password, class:"mb-2" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control w-50" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field ms-5">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions ms-5 mt-3">
      <%= f.submit "Log in" , :class=>"btn bg-primary text-white"%>
    </div>
   <% end %>

   <div class="justify-content-end mb-5 d-flex">
    <p>If you have no account,please Signup</p>
    <%= link_to "signup", new_user_registration_path,  class:"btn bg-primary text-white ms-3 sign"%>
   </div>
   

 </div>
</div> 

